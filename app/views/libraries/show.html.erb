<% title @library.name %>
<% breadcrumb @library %>

<p id="notice"><%= notice %></p>


<h1><%= @library.name %> hours</h1>

<% if @library.about_url %>
  <%= link_to root_url, class: 'location-and-access' do %>
    <span class="fas fa-arrow-left" aria-hidden="true"></span>
    All library hours
  <% end %>
<% end %>

<% if can?(:edit, @library) %>
  <div class="float-end">
    <% if current_user && current_user.superadmin? %>
      <%= link_to 'Edit library', edit_library_path(@library), class: 'btn btn-outline-secondary btn-sm' %>
    <% end %>
    <%= link_to 'Edit hours', library_term_hours_path(@library), class: 'btn btn-outline-secondary btn-sm'%>
  </div>
<% end %>

<%= render 'range' %>
<%= render partial: 'location_hours', locals: { locations: @library.locations } %>

<% if current_user && current_user.superadmin? %>
  <% if @library.locations.without_hours.any? %>
  <h2>Other locations</h2>
  <ul class="list-unstyled">
    <% @library.locations.without_hours.each do |l| %>
      <li><%= link_to l.name, library_location_path(@library, l) %></li>
    <% end %>
    </ul>
  <% end %>
<% end %>
