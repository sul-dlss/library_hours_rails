<div class="clearfix date-range well">
  <nav class="date-pagination col-md-7 col-xs-12">
    <%= link_to params.merge(week: (@range.begin - 1.week + 1.day).strftime("%GW%V")), class: 'sul-i-arrow-left-3' do %>
      <span class="sr-only">Previous</span>
    <% end %>
    <h2 class="h4"><%= l(@range.begin, format: :short) %> â€“ <%= l(@range.end, format: :short) %></h2>
    <%= link_to params.merge(week: (@range.begin + 1.week + 1.day).strftime("%GW%V")), class: 'sul-i-arrow-right-3' do %>
      <span class="sr-only">Next</span>
    <% end %>
  </nav>

  <div class="col-md-5 col-sm-12 col-xm-12">
    <form method="GET" class="form form-horizontal row">
      <div class="col-md-8 col-sm-6">
      <label for="jump-date" class="control-label sr-only">Jump to:</label>
      <div class="input-group">
        <input value="<%= Time.zone.today %>" name="date" type="date" class="form-control" id="jump-date" data-href="<%= url_for(params.merge(week: "%GW%V")) %>"/>
        <span class="input-group-btn">
          <input value="Go" type="submit" class="btn btn-primary"/>
        </span>
      </div>
    </div>
      <div class="btn-group col-md-3 col-sm-6" id="jump-term-group">
        <button id="jump-term" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          Quarters + Holidays <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <% if can? :create, Term %>
            <li><%= link_to 'Manage Terms', terms_path %></li>
          <% end %>
          <% Term.current_and_upcoming(2.years).group_by(&:year).each do |year, terms| %>
          <li><strong><%= year %></strong></li>
          <% terms.each do |t| %>
            <li><%= link_to params.merge(week: t.dtstart.strftime("%GW%V")) do %>
              <%= t.name %>
              <small><%= l t.dtstart.to_date, format: :short %><%= "-" + l(t.dtend.to_date, format: :short) unless t.dtstart.to_date == t.dtend.to_date %></small>
            <% end %>
            </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </form>
  </div>
</div>
